<div class="card">
  <div class="card-body">
    <h2>Welcome to Dinosaur Trivia!</h2>
    <form id="startForm">
      <div class="mb-3">
        <label for="name" class="form-label">Enter your name:</label>
        <input type="text" id="name" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Select a quiz:</label>
        <select id="quizSelect" class="form-select">
          <option value="dinos">Dinosaur Periods</option>
          <option value="fossils">Fossils & Evolution</option>
        </select>
      </div>
      <button class="btn btn-primary" type="submit">Start Quiz</button>
    </form>
  </div>
</div>
